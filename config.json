{
    "WORKFLOW":
    {
        "READS_SOURCE": "data/raw/",
        "OUTPUT": "test_results/",
        "ENV": "envs/default.yaml"
    },

    "TRIMMOMATIC":
    {
        "THREADS": 8,
        "ENV": "envs/trimmomatic.yaml",
        "ADAPTERS": "data/adapters/nextera.fa",
        "SLIDING_WINDOW": "4:20",
        "MINLEN": "36",
        "CROP": "149"
    },

    "FASTQC":
    {
        "ENV": "envs/fastqc.yaml",
        "THREADS": 2
    },

    "BWA":
    {
        "REF_GENOME": "data/reference/hs37d5.fa.gz",
        "ENV": "envs/bwa.yaml",
        "THREADS": 16
    },

    "PICARD":
    {
        "ENV": "envs/picard.yaml",
        "TAGGING": "All"
    },

    "SAMTOOLS":
    {
        "ENV": "envs/samtools.yaml",
        "THREADS": 16
    },

    "STRELKA":
    {
        "ENV": "envs/strelka.yaml",
        "THREADS": 8
    },

    "MANTA":
    {
        "ENV": "envs/manta.yaml",
        "THREADS": 8
    },

    "CNMOPS":
    {
        "ENV": "envs/cnmops.yaml",
        "HEADER": "data/cnvs/cnv_vcf_header.tsv",
        "CONTROL": "data/cnvs/wgs_cnv_controls.RData",
        "BED": "data/cnvs/hs37d5_genes.bed"
    },

    "EXPANSIONHUNTER":
    {
        "ENV": "envs/expansionhunter.yaml",
        "CATALOG": "data/expansions/variant_catalog.json"
    }
}